{
  "name": "cordova-plus",
  "version": "0.7.0",
  "description": "Productive command line for Cordova development",
  "main": "./lib/index.js",
  "bin": "./lib/cli.js",
  "types": "./index.d.ts",
  "type": "module",
  "scripts": {
    "start": "node lib/cli.js",
    "prepublishOnly": "npm run build",
    "cli": "ts-node src/cli.ts",
    "jest": "env NODE_OPTIONS=--experimental-vm-modules jest",
    "build": "wireit",
    "test:jest": "wireit",
    "test:tsd": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "@frat/envinfo": "^7.10.1",
    "@npmcli/package-json": "^3.0.0",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/cordova": "^0.0.34",
    "@types/node": "^18.11.9",
    "browser-sync": "^2.27.10",
    "chokidar": "^3.5.3",
    "clipboardy": "^3.0.0",
    "cordova": "^11.0.0",
    "cordova-android": "^11.0.0",
    "cordova-browser": "^6.0.0",
    "cordova-common": "^4.1.0",
    "cordova-ios": "^6.2.0",
    "cordova-lib": "^11.0.0",
    "cordova-serve": "^4.0.0",
    "elementtree": "^0.1.7",
    "execa": "^6.1.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "json-stable-stringify": "^1.0.2",
    "lodash": "^4.17.21",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "rollup": "^3.4.0",
    "semver": "^7.3.8",
    "serve-handler": "^6.1.5",
    "signal-exit": "^3.0.7",
    "tempy": "^3.0.0",
    "tslib": "^2.4.1",
    "typescript": "~4.9.3",
    "ua-parser-js": "^1.0.32",
    "untildify": "^4.0.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/browser-sync": "^2.26.3",
    "@types/elementtree": "^0.1.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.2.3",
    "@types/json-stable-stringify": "^1.0.34",
    "@types/lodash": "^4.14.189",
    "@types/semver": "^7.3.13",
    "@types/serve-handler": "^6.1.1",
    "@types/signal-exit": "^3.0.1",
    "@types/ua-parser-js": "^0.7.36",
    "@types/yargs": "^17.0.13",
    "jest": "^29.3.1",
    "plugman": "^3.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsd": "^0.24.1",
    "wireit": "^0.8.0"
  },
  "files": [
    "*.md",
    "lib",
    "src",
    "plugin",
    "*.json",
    "*.ts"
  ],
  "author": "Ratson",
  "license": "MIT",
  "repository": "cordova-plus/cordova-plus",
  "engines": {
    "node": ">= 12"
  },
  "keywords": [
    "cordova"
  ],
  "wireit": {
    "build": {
      "command": "tsc -b && chmod +x lib/cli.js",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "*.json"
      ],
      "output": [
        "lib/**",
        "*.tsbuildinfo"
      ]
    },
    "test:jest": {
      "command": "npm run jest",
      "dependencies": [
        "build"
      ]
    },
    "test:tsd": {
      "command": "tsd",
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "dependencies": [
        "test:jest",
        "test:tsd"
      ]
    }
  }
}
