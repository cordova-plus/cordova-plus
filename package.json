{
  "name": "cordova-plus",
  "version": "0.9.1",
  "description": "Productive command line for Cordova development",
  "main": "./lib/index.js",
  "bin": "./lib/cli.js",
  "types": "./index.d.ts",
  "type": "module",
  "scripts": {
    "start": "node lib/cli.js",
    "prepublishOnly": "npm run build",
    "cli": "tsx src/cli.ts",
    "jest": "env NODE_OPTIONS=--experimental-vm-modules jest",
    "build": "wireit",
    "test:jest": "wireit",
    "test:tsd": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "@frat/envinfo": "^7.10.1",
    "@npmcli/package-json": "^3.1.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/cordova": "^11.0.0",
    "@types/node": "^20.2.5",
    "browser-sync": "^2.29.3",
    "chokidar": "^3.5.3",
    "clipboardy": "^3.0.0",
    "cordova": "^12.0.0",
    "cordova-android": "^12.0.0",
    "cordova-browser": "^7.0.0",
    "cordova-common": "^5.0.0",
    "cordova-ios": "^6.3.0",
    "cordova-lib": "^12.0.1",
    "cordova-serve": "^4.0.1",
    "elementtree": "^0.1.7",
    "execa": "^7.1.1",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.1",
    "json-stable-stringify": "^1.0.2",
    "listr2": "^6.6.0",
    "lodash": "^4.17.21",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "rollup": "^3.23.0",
    "semver": "^7.5.1",
    "serve-handler": "^6.1.5",
    "signal-exit": "^4.0.2",
    "tempy": "^3.0.0",
    "tslib": "^2.5.3",
    "typescript": "~5.1.3",
    "ua-parser-js": "^1.0.35",
    "untildify": "^4.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@tsconfig/node16": "^1.0.4",
    "@types/browser-sync": "^2.27.0",
    "@types/elementtree": "^0.1.1",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.2",
    "@types/json-stable-stringify": "^1.0.34",
    "@types/lodash": "^4.14.195",
    "@types/semver": "^7.5.0",
    "@types/serve-handler": "^6.1.1",
    "@types/signal-exit": "^3.0.1",
    "@types/ua-parser-js": "^0.7.36",
    "@types/yargs": "^17.0.24",
    "jest": "^29.5.0",
    "plugman": "^3.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsd": "^0.28.1",
    "tsx": "^3.12.7",
    "wireit": "^0.9.5"
  },
  "files": [
    "*.md",
    "lib",
    "src",
    "plugin",
    "*.json",
    "*.ts"
  ],
  "author": "Ratson",
  "license": "MIT",
  "repository": "cordova-plus/cordova-plus",
  "engines": {
    "node": ">= 12"
  },
  "keywords": [
    "cordova"
  ],
  "wireit": {
    "build": {
      "command": "tsc -b && chmod +x lib/cli.js",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "*.json"
      ],
      "output": [
        "lib/**",
        "./node_modules/.cache/*.tsbuildinfo"
      ]
    },
    "test:jest": {
      "command": "npm run jest",
      "dependencies": [
        "build"
      ]
    },
    "test:tsd": {
      "command": "tsd",
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "dependencies": [
        "test:jest",
        "test:tsd"
      ]
    }
  }
}
