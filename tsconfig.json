{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["types.d.ts", "src/**/*.ts"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
