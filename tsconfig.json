{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "module": "esnext",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.tsbuildinfo"
  },
  "include": ["types.d.ts", "src/**/*.ts"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
